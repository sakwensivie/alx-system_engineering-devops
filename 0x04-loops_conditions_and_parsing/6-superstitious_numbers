#!/usr/bin/env bash
# A script to indicate special numbers from Italy and China

i=1

while [ $i -le 20 ]
do
    case $i in
        4)    echo "$i"
              echo "bad luck from China"
              ;;
        8)    echo "$i"
              echo "good luck from China"
              ;;
        17)   echo "$i"
              echo "bad luck from Italy"
              ;;
        *)    echo $i
              ;;
    esac
    i=$((i + 1))
done


